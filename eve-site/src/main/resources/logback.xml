<?xml version="1.0" encoding="UTF-8" ?>
<configuration scan="true" scanPeriod="3 seconds">
	<contextName>eve-site</contextName>

	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>
				%d{yyyy-MM-dd HH:mm:ss.SSS} [%thread] %-5level %logger{64} - %msg%n
			</pattern>
		</encoder>
	</appender>

	<jmxConfigurator />
	<root level="WARN">
		<appender-ref ref="STDOUT" />
	</root>

	<logger name="nz.net.dnh.eve" level="ALL" />
	<logger name="nz.net.dnh.eve.web.view.ContextBeanExposingView" level="WARN" />
	
	<!-- This logs where the various paths are bound during the framework boot -->
<!-- 	<logger name="org.springframework.web.servlet.mvc.method.annotation.RequestMappingHandlerMapping" level="DEBUG" /> -->
</configuration>
